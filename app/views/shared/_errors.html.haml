- if resource.errors.any?
  #error_explanation
    %h2
      = pluralize(resource.errors.count, "error")
      / prohibited this "#{resourse.title}" from being saved:
    %ul
      - resource.errors.full_messages.each do |message|
        %li= message




- if resource.present? && resource.errors.any?
  = content_tag :div, class: "error-explanation", data: { resource_id: resource.id } do
    %h2
      = t('.header', count: resource.errors.count)
      \:
    %ul
      - resource.errors.full_messages.each do |message|
        %li= message
